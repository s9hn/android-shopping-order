<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="receipt"
            type="woowacourse.shopping.ui.ordercomplete.uimodel.Bill" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ordercomplete.OrderCompleteActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_order_detail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/toolbar_color"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/tv_order_detail"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tb_order_detail" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_order_complete_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintDimensionRatio="h, 1.2:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_order_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_detail"
            tools:listitem="@layout/order_item" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/line_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_order_complete_list" />

        <TextView
            android:id="@+id/tv_payment_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/tv_payment_price"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <View
            android:id="@+id/line_price_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="20dp"
            android:background="@drawable/line_divider"
            app:layout_constraintTop_toBottomOf="@+id/tv_payment_price"
            tools:layout_editor_absoluteX="20dp" />

        <TextView
            android:id="@+id/tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/tv_order_price"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/line_price_divider"
            app:layout_constraintTop_toBottomOf="@+id/line_price_divider" />

        <TextView
            android:id="@+id/tv_order_complete_origin_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/quantity_format(receipt.originPrice)}"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/line_price_divider"
            app:layout_constraintTop_toTopOf="@+id/tv_order_price"
            tools:text="184,400원" />

        <TextView
            android:id="@+id/tv_discount_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/tv_discount_coupon"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_order_price"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_price" />

        <TextView
            android:id="@+id/tv_order_complete_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{receipt.showCouponName()}"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_order_complete_origin_price"
            app:layout_constraintTop_toTopOf="@+id/tv_discount_coupon"
            tools:text="50% 할인 쿠폰" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/tv_total_price"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_discount_coupon"
            app:layout_constraintTop_toBottomOf="@+id/tv_discount_coupon" />

        <TextView
            android:id="@+id/tv_order_complete_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/quantity_format(receipt.totalPrice)}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_order_complete_coupon"
            app:layout_constraintTop_toTopOf="@+id/tv_total_price"
            tools:text="72,200원" />

        <TextView
            android:id="@+id/tv_order_complete_history_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_background"
            android:paddingHorizontal="40dp"
            android:paddingVertical="10dp"
            android:text="@string/history_order"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
